<!-- Custom Styles -->
<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    #main-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        padding: 0;
        margin: 0;
    }

    #controls {
        padding: 10px;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
    }

    #map {
        flex: 1;
        width: 100%;
    }
</style>

<!-- Controls and Map Layout -->
<div class="container-fluid" id="main-container">
    <!-- Controls: Horizontal layout using Bootstrap -->
    <div id="controls" class="d-flex flex-wrap align-items-center gap-3">
        <select class="form-select w-auto">
            <option selected>Select Assets</option>
            <option value="-1">SELECT All</option>
            <option value="2">BBX-727</option>
            <option value="3">BAQ-321</option>
            <option value="4">BHQ-123</option>
            <option value="5">BPY-9812</option>
            <option value="6">AQE-227</option>
            <option value="7">SEW-777</option>
        </select>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="ChkBoxLiveMonitering">
            <label class="form-check-label" for="ChkBoxLiveMonitering">
                Live View
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="ChkViewAlarms">
            <label class="form-check-label" for="ChkViewAlarms">
                View Alarms
            </label>
        </div>

        <button class="btn btn-primary">Apply</button>
    </div>

    <!-- Map container -->
    <div id="map"></div>
</div>

